{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "TypeTidy",
  "version": "0.1.0",
  "identifier": "com.typetidy.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:3000",
    "distDir": "../.next"
  },
  "package": {
    "productName": "TypeTidy",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.typetidy.app",
      "icon": ["icons/icon.png"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "TypeTidy",
        "width": 1200,
        "height": 800
      }
    ]
  }
}
